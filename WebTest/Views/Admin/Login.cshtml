@model WebTest.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content" class="row panel well">
    <div class="panel-heading"><h1>Admin panel</h1></div>
    <div class="panel-body">
        <p class="lead">Pleas log in to access the administration area:</p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>User Name:</label>
                @Html.TextBoxFor(x => Model.UserName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Password:</label>
                @Html.PasswordFor(x => Model.Password, new { @class = "form-control" })
            </div>
            <input type="submit" value="Log in" class="btn btn-primary" />
        }
    </div>
</div>
